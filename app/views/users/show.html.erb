
<div class="container">

	<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	<span>ニックネーム: <%= @user.name %></span>
	<% if @user.id == current_user.id %>
	  <p><%= link_to edit_user_path(@user), class: "btn-lg btn-default" do %>
	  	
	  	<i class="fas fa-edit"></i>
	  </p><% end %>
	<% end %>
	<%= @user.age %>　<%= @user.sex %>


	<p>＜自己紹介文＞</p>
	<%= @user.profile %>

	<p>＜お気に入り作品＞</p>

	<% if @movie_info != nil %>
	<%= link_to movies_show_path(@movie_info["id"]) do %>
	<%= image_tag("https://image.tmdb.org/t/p/original/#{@movie_info['poster_path']}",:size =>"200x200") %>
	<% end %>
	  <% end %>

</div>